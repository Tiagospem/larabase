{
  "name": "larabase",
  "version": "1.0.0",
  "description": "Database management tool like TablePlus",
  "main": "src/main/index.js",
  "type": "commonjs",
  "scripts": {
    "clean": "rm -rf dist build",
    "start": "vite",
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "npm run clean && vite build && electron-builder",
    "build:vite": "npm run clean && vite build",
    "build:electron": "npm run clean && electron-builder",
    "build:mac": "npm run clean && vite build && electron-builder --mac",
    "build:win": "npm run clean && vite build && electron-builder --win",
    "build:linux": "npm run clean && vite build && electron-builder --linux",
    "lint": "eslint --ext .js,.vue,.ts --fix src",
    "lint:check": "eslint --ext .js,.vue,.ts src",
    "lint:fix-style": "eslint --ext .js,.vue,.ts --fix --fix-type layout,suggestion,problem src",
    "remove-comments": "node remove-comments.js",
    "format": "prettier --write \"src/**/*.{js,vue,css,scss,html,ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{js,vue,css,scss,html,ts,tsx}\"",
    "cleanup": "npm run remove-comments && npm run format",
    "type-check": "vue-tsc --noEmit",
    "ts:compile": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "daisyui": "^3.9.3",
    "electron-store": "^8.1.0",
    "highlight.js": "^11.11.1",
    "mysql2": "^3.14.0",
    "pinia": "^2.1.6",
    "pluralize": "^8.0.0",
    "tailwindcss": "^3.3.3",
    "uuid": "^11.1.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vue/eslint-config-standard": "^9.0.1",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-vue": "^10.0.0",
    "globals": "^16.0.0",
    "postcss": "^8.4.29",
    "prettier": "^3.5.3",
    "strip-comments": "^2.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^4.4.9",
    "vue-tsc": "^2.2.8",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.larabase.app",
    "productName": "Larabase",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "src/renderer/assets/icons/mac/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/renderer/assets/icons/win/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "icon": "src/renderer/assets/icons/png"
    }
  }
}
