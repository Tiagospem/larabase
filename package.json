{
  "name": "larabase",
  "version": "1.0.0",
  "description": "Database management tool like TablePlus",
  "main": "src/main/index.js",
  "scripts": {
    "clean": "rm -rf dist build",
    "start": "vite",
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "npm run clean && vite build && electron-builder",
    "build:vite": "npm run clean && vite build",
    "build:electron": "npm run clean && electron-builder",
    "build:mac": "npm run clean && vite build && electron-builder --mac",
    "build:win": "npm run clean && vite build && electron-builder --win",
    "build:linux": "npm run clean && vite build && electron-builder --linux"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "daisyui": "^3.9.3",
    "electron-store": "^8.1.0",
    "mysql2": "^3.14.0",
    "pinia": "^2.1.6",
    "pluralize": "^8.0.0",
    "tailwindcss": "^3.3.3",
    "uuid": "^11.1.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.4",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1",
    "postcss": "^8.4.29",
    "vite": "^4.4.9",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.larabase.app",
    "productName": "Larabase",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "src/renderer/assets/icons/mac/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/renderer/assets/icons/win/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "icon": "src/renderer/assets/icons/png"
    }
  }
}