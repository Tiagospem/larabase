{
  "name": "larabase",
  "version": "0.7.1",
  "description": "An Opined Database GUI for Laravel Developers",
  "main": "dist/main.cjs",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"node build.cjs --dev && electron .\"",
    "build": "vite build && node build.cjs --prod",
    "build:mac": "npm run build && electron-builder --mac --universal",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux",
    "publish:mac": "npm run build && electron-builder --publish always --mac --universal",
    "publish:win": "npm run build && electron-builder --publish always --win",
    "publish:linux": "npm run build && electron-builder --publish always --linux",
    "clean": "rimraf dist release node_modules/.vite",
    "format": "prettier . --write --single-attribute-per-line"
  },
  "keywords": [],
  "author": "Tiago Padilha <tiagospem@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "daisyui": "3.8.0",
    "dockerode": "^4.0.6",
    "electron-dl": "^4.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "highlight.js": "^11.11.1",
    "marked": "^15.0.8",
    "mysql2": "^3.14.0",
    "pinia": "^2.1.6",
    "pluralize": "^8.0.0",
    "redis": "^4.6.10",
    "sql-formatter": "^15.6.0",
    "tailwindcss": "3.3.3",
    "uuid": "^11.1.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.1.0",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1",
    "esbuild": "^0.25.1",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-prettier": "5.2.5",
    "globals": "^16.0.0",
    "postcss": "^8.4.29",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "terser": "^5.39.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^4.4.9",
    "vue-tsc": "^2.2.8",
    "wait-on": "^8.0.3"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 200
  },
  "build": {
    "appId": "com.larabase.app",
    "productName": "Larabase",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "extraMetadata": {
      "main": "dist/main.cjs"
    },
    "asar": true,
    "compression": "store",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "publish": {
      "provider": "github",
      "owner": "Tiagospem",
      "repo": "larabase",
      "private": false
    },
    "directories": {
      "output": "release"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/renderer/assets/icons/win/icon.ico"
    },
    "mac": {
      "darkModeSupport": true,
      "icon": "dist/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "notarize": false
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "dist/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ],
      "icon": "src/renderer/assets/icons/win/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development",
      "icon": "src/renderer/assets/icons/png"
    },
    "asarUnpack": [
      "node_modules/electron-store/**/*"
    ]
  }
}
