{
  "name": "larabase",
  "version": "0.1.0",
  "description": "An Opined Database GUI for Laravel Developers",
  "main": "src/main/index.js",
  "type": "commonjs",
  "scripts": {
    "clean": "rm -rf dist build",
    "dev": "concurrently -k \"vite\" \"cross-env NODE_ENV=development electron .\"",
    "build": "npm run clean && vite build && electron-builder",
    "build:mac": "npm run clean && vite build && electron-builder --mac",
    "build:win": "npm run clean && vite build && electron-builder --win",
    "build:linux": "npm run clean && vite build && electron-builder --linux",
    "publish-win": "npm run build && electron-builder --publish always --win",
    "publish-mac": "npm run build && electron-builder --publish always --mac --universal",
    "publish-linux": "npm run build && electron-builder --publish always --linux",
    "format": "prettier . --write --single-attribute-per-line"
  },
  "keywords": [],
  "author": "Tiago Padilha <tiagospem@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "daisyui": "^3.9.3",
    "electron-store": "^8.1.0",
    "eslint-config-prettier": "10.1.1",
    "highlight.js": "^11.11.1",
    "marked": "^15.0.8",
    "mysql2": "^3.14.0",
    "pinia": "^2.1.6",
    "pluralize": "^8.0.0",
    "redis": "^4.6.10",
    "tailwindcss": "^3.3.3",
    "uuid": "^11.1.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.1.0",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1",
    "globals": "^16.0.0",
    "postcss": "^8.4.29",
    "eslint-plugin-prettier": "5.2.5",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^4.4.9",
    "vue-tsc": "^2.2.8",
    "wait-on": "^8.0.3"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 200
  },
  "build": {
    "appId": "com.larabase.app",
    "productName": "Larabase",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "Tiagospem",
      "repo": "larabase",
      "private": false
    },
    "files": [
      "dist/**/*",
      "src/main/**/*"
    ],
    "mac": {
      "darkModeSupport": true,
      "icon": "src/renderer/assets/icons/mac/icon.icns",
      "mergeASARs": true,
      "singleArchFiles": "*"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "src/renderer/assets/icons/mac/icon.icns",
      "contents": [
        { "x": 110, "y": 150 },
        { "x": 240, "y": 150, "type": "link", "path": "/Applications" }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/renderer/assets/icons/win/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development",
      "icon": "src/renderer/assets/icons/png"
    }
  }
}
